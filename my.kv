<TextInput>
    font_size: 28
    size_hint: (0.8, 1)
    pos_hint: {'center_x': 0.5}
    halign: 'center'

<Button>
    font_size: 28
    font_name: "DejaVuSans.ttf"
    size_hint: (0.8, 1)
    padding: 20
    canvas.before:
        Color:
            rgba: (0.4,0.7,0.3,1)
        Rectangle:
            size: self.size
            pos: self.pos

<Label>
    font_size: 25
    pos_hint: {'center_x': 0.5}
    size_hint: (0.8, 1)
    canvas.before:
        Color:
            rgba: (0.4,0.7,0.3,1)
        Rectangle:
            size: self.size
            pos: self.pos

<Rectangle>
    size_hint: (0.8, 1)
    pos_hint: {'center_x': 0.5}
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos

<Line>
    size_hint: (0.5, 1)
    pos_hint: {'center_x': 0.5}

<TheLayout>
    # For top layout we can mix for each element to achieve a position: {'x', 'y', 'top', 'bottom', 'left', 'right'}
    # for example pos_hint: {"x":0, "top":1}
    # remember to use both size_hint and pos_hint
    # Image:
        # source: 'images/sth.jpg'
        # allow_stretch: True
        # keep_ratio: False
    surname:surname
    name:name
    fathers_name:fathers_name
    address:address
    number:number
    pesel:pesel
    button:button
    name_1:name_1
    fathers_name_1:fathers_name_1
    address_1:address_1
    number_1:number_1
    pesel_1:pesel_1

    # obramowanie całości
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        # górna część
        BoxLayout:
            orientation: "horizontal"

            # dla panelu pierwszego z exportami i bazą
            BoxLayout:
                orientation: "vertical"
                padding: 15
                spacing: 10

                AnchorLayout:
                    Button:
                        text: "Export Excel"

                AnchorLayout:
                    Button:
                        text: "Export CSV"

                AnchorLayout:
                    Button:
                        text: "Export DB"

                AnchorLayout:
                    Button:
                        text: "Osoby"

            # dla pierwszego formularza
            BoxLayout:
                size: root.width-0.4*root.width, root.height
                padding: 15
                spacing: 10
                orientation: "vertical"
                text_size: 40
                row_force_default:True
                row_default_height:40
                col_force_default:True
                col_default_width:400
                text_size: 40

                Label:
                    text: "Nazwisko:"
                TextInput:
                    multiline:False
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:surname

                Label:
                    text: "Imię:"

                TextInput:
                    multiline:False
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:name

                Label:
                    text: "Imię ojca:"
                TextInput:
                    multiline:False
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:fathers_name

                Label:
                    text: "PESEL:"
                TextInput:
                    multiline:False
                    input_type: 'number'
                    input_filter: 'int'
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:pesel

                Label:
                    text: "Adres zamieszkania:"
                TextInput:
                    size_hint: (0.8, 2)
                    multiline:True
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:address

                Label:
                    text: "Telefon kontaktowy:"

                TextInput:
                    multiline:False
                    input_type: "number"
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:number


                Label:
                    text: ""
                    id:nothing
                    multiline:True
                    canvas.before:
                        Color:
                            rgba: (0,0,0,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos

            # dla drugiego formularza
            BoxLayout:
                size: root.width-0.2*root.width, root.height
                pos_hint: {'center_x': 0.8}
                padding: 15
                spacing: 10
                orientation: "vertical"
                text_size: 40
                row_force_default:True
                row_default_height:40
                col_force_default:True
                col_default_width:400
                text_size: 40

                Label:
                    text: "Nazwisko:"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                TextInput:
                    multiline:False
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:surname_1

                Label:
                    text: "Imię:"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos

                TextInput:
                    multiline:False
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:name_1

                Label:
                    text: "Imię ojca:"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                TextInput:
                    multiline:False
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:fathers_name_1

                Label:
                    text: "PESEL:"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                TextInput:
                    multiline:False
                    input_type: 'number'
                    input_filter: 'int'
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:pesel_1

                Label:
                    text: "Adres zamieszkania:"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                TextInput:
                    size_hint: (0.8, 2)
                    multiline:True
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:address_1

                Label:
                    text: "Telefon kontaktowy:"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                TextInput:
                    multiline:False
                    input_type: "number"
                    canvas.after:
                        Color:
                            rgba: 1, 182/255, 20/255, 1
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    foreground_color: (0, 0, 0, 1)
                    on_text: root.typer()
                    id:number_1


                Label:
                    text: ""
                    id:nothing_1
                    multiline:True
                    canvas.before:
                        Color:
                            rgba: (0,0,0,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos

            BoxLayout:
                size: root.width-0.9*root.width, root.height
                Button:
                    text: "Zapisz i dodaj kolejne osoby →"
                    size_hint: (0.2, 0.2)
                    pos_hint: {"x":0.5, "y":0.4}
                    font_name: "DejaVuSans.ttf"
                    canvas.before:
                        Color:
                            rgba: (62/255, 124/255, 185/255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos


        Button:
            padding: 20
            text: "Drukuj"
            font_size: 30
            size_hint: (0.2, 0.13)
            disabled: True
            id: button
            on_press: root.opens_printing()
            background_normal: ''
            background_disabled_normal: ''
            background_color:(0.207, 0.635, 0.423, 0.9)


